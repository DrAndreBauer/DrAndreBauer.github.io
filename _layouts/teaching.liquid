<!-- _layouts/teaching.html -->
        <div class="post">

          <header class="post-header">
            <h1 class="post-title">{{ page.title }} </h1>
          </header>

          <article>

                  {{ content }}

            <div class="cv">
                <div class="card mt-3 p-3">
                  <h3 class="card-title font-weight-medium">Current Courses</h3>
                  <div>
                    <ul class="card-text font-weight-light list-group list-group-flush">
                      {% for course in site.teaching %}
                        {% if course.tags contains 'current' %}
                            {% assign course_redirect = course.redirect %}
                            {% assign course_path = course.url | relative_url %}
                            <li class="list-group-item">
                              <div class="row">
                                <div class="col-xs-6 cl-sm-2 col-md-2 text-center">
                                  <span class="badge font-weight-bold danger-color-dark align-middle" style="width: 100%;">
                                    {{ course.semester }}
                                  </span>
                                </div>
                                <div class="col-xs-7 cl-sm-7 col-md-7 mt-2 mt-md-0">
                                    {% if post_redirect %}
                                      <a href="{{ course_redirect }}" class="title font-weight-normal ml-1 ml-md-4" target="_blank">{{ course.title }} {{ course.name }}</a>
                                    {%- else -%}
                                      <a href="{{ course_path }}" class="title font-weight-normal ml-1 ml-md-4">{{ course.title }} {{ course.name }}</a>
                                    {%- endif %}
                                </div>
                                <div class="col-xs-6 cl-sm-3 col-md-3 text-center">
                                  <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem;">{{ course.level }}</h6>
                                </div>
                              </div>
                            </li>
                        {%- endif %}
                      {% endfor %}
                    </ul>
                  </div>
                </div>
            </div>

            <div class="cv">
                {% for entry in site.data.teaching %}
                    <div class="card mt-3 p-3">
                      <h3 class="card-title font-weight-medium">{{ entry.title }}</h3>
                      <div>

                          <ul class="card-text font-weight-light list-group list-group-flush">
                              {% for content in entry.contents %}
                                <li class="list-group-item">
                                    <div class="row">
                                        <div class="col-xs-6 cl-sm-2 col-md-2 text-center">
                                          <span class="badge font-weight-bold danger-color-dark align-middle" style="width: 100%;">
                                            {{ content.year }}
                                          </span>
                                        </div>
                                        <div class="col-xs-7 cl-sm-7 col-md-7 mt-2 mt-md-0">
                                            <h6 class="title font-weight-bold ml-1 ml-md-4">{{content.title}}</h6>
                                            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem;">{{content.role}}</h6>
                                        </div>
                                        <div class="col-xs-6 cl-sm-3 col-md-3 text-center">
                                            <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem;">{{content.level}}</h6>
